.comment_form
  = form_for @comment do |f|
    = text_field_tag :website, "http://www.example.com" , :id => 'comment_website_input', :name => 'website'
    = hidden_field_tag :post_id, @comment.post.id.to_s
    %p
      = f.label :author, "Votre nom"
      %br
      = f.text_field :author, :value => @comment.author || current_name || comment_name
    %p
      = f.label :email, "Votre email (pour gravatar picture)"
      %br
      = f.text_field :email, :value => @comment.email || current_email || comment_email
    %p
      = f.label :content, "Commentaire"
      %br
      = f.text_area :content, :rows => "7"
    %p
      = f.submit "Envoyer"
