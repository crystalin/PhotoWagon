!!!
%html
  %head
    %title Far in Japan, by Alan
    = csrf_meta_tag
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'

  %body
    -#=link_to "<h1>Far in Japan</h1>".html_safe, root_path
    .site_title
      %h1=link_to "Far in Japan", root_path
    #container
      #content
        #header
          #menu
            %ul
              %li= link_to "Accueil", root_path
              - if missing_photos > 0
                %li= link_to "Nouvelles photos (#{missing_photos})", beginning_posts_path(:page => last_visited_page)
              -else
                %li= link_to "D&#233;but de l'histoire".html_safe, beginning_posts_path
              %li= link_to "Derniers commentaires", comments_path

            .clear
          -flash.each do |name, msg|
            =content_tag :div, msg, :id => "flash_#{name}"
        .clear
        = yield
      #footer
        #user_nav
          -if current_user
            Logged in as #{current_user.email}
            = link_to "Log out", log_out_path
          -else
            = link_to "Sign up", sign_up_path
            or
            = link_to "log in", log_in_path
        = render 'layouts/footer'
    = javascript_include_tag :defaults